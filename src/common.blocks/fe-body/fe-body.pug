include /src/common.blocks/logo/logo
include /src/common.blocks/input-text/input-text
include /src/common.blocks/input-field/input-field
include /src/common.blocks/input-with-title/input-with-title
include /src/common.blocks/dropdown/dropdown

+b.fe-body
  +e.container 
    +e.column1
      +e.logo-colorless
        +logo()
      +input-with-title({type: "text", placeholder: "Email", isShadow: true})
      +e.container-short
        +input-with-title({type: "text", value: "This is pretty awesome", isHover: true})
      //+input-text({type: "email", placeholder: "email", title: "text field"})
      +b.input-with-title.__input-with-title
        +e.H3.title.title-h3 Text Field
        +b.INPUT(type="text", value="This is pretty awesome").input.text-body.input__hover
      +b.input-with-title.__input-with-title
        +e.H3.title.title-h3 dropdown
        +e.input-dropdown
          +b.INPUT(type="button", value="Сколько гостей").input_cursor.text-body
      +b.input-with-title.__input-with-title
        +e.H3.title.title-h3 masked text field
          +b.INPUT(type="text", placeholder="ДД.ММ.ГГГГ").input.text-body
      +e.dropdown-container
        +b.input-with-title.__input-with-title
          +e.H3.title.title-h3 date dropdown
          +e.input-dropdown._size_short
            +b.INPUT(type="button", value="ДД.ММ.ГГГГ").input_cursor._size_short.text-body
        +b.input-with-title.__input-with-title
          +e.H3.title.title-h3 date dropdown
          +e.input-dropdown._size_short
            +b.INPUT(type="button", value="19.08.2019").input_cursor._size_short.text-body    
      +b.input-with-title.__input-with-title
          +e.H3.title.title-h3 date dropdown
          +e.input-dropdown._size_midle
            +b.INPUT(type="button", value="19.08.2019").input_cursor._size_midle.text-body          
      +b.input-with-title.__input-with-title
        +e.H3.title.title-h3 Subscription Text Field
        +b.INPUT(type="email", placeholder="Email").input.text-body      
