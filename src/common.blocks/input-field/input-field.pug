mixin input-field(options)
  - var className = "input-field";
  - className += options.isShadow ? " input-field_shadow" : ""
  - className += options.isShort ? " input-field_short" : ""
  - className += options.isHover ? " input-field_hover" : ""
  - className += options.isMasked ? " input-field_masked" : ""
  case options.type
      when "text"
      when "email"
        input(
          class = className 
          type = options.type
          placeholder = options.placeholder ? options.placeholder : ""
          value = options.value ? options.value : ""
        )